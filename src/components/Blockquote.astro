---
export interface Props {
  title?: string
}

const { title } = Astro.props
---

<figure class="blockquote-component">
  {
    title && (
      <figcaption>
        <strong>{title}</strong>
      </figcaption>
    )
  }

  <blockquote><slot /></blockquote>
</figure>

<style>
  figure {
    @apply text-center mx-0 my-[1em];
  }

  blockquote {
    margin-bottom: 0.5em;
    @apply uppercase px-0 border-none text-2xl leading-5 tracking-wider text-primary m-auto;
  }

  figcaption strong {
    @apply uppercase text-base leading-6 font-medium tracking-widest text-copy-dark1;
    @apply dark:text-dm-copy;
  }
</style>
