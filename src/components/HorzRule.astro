---
export interface Props {
  tight?: boolean
  loose?: boolean
}

const { tight, loose } = Astro.props
const classes = 'mt-8 mb-8 bg-border-light dark:bg-dm-border-light'
---

<hr class:list={[classes, { tight, loose }]} />

<style>
  hr {
    height: 1px;
  }
  .tight {
    @apply mt-4 mb-4;
  }

  .loose {
    @apply mt-12 mb-12;
  }
</style>
